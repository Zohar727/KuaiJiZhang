<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginBottom="150dp">
    <LinearLayout
        android:id="@+id/r_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:textColor="#fff"
                android:text="用  户  名:"/>
            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textCursorDrawable="@null"
                android:background="@null"
                android:drawableBottom="@drawable/line"
                android:singleLine="true"
                android:layout_weight="0.3"
                android:layout_marginRight="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/r_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/r_username"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="right"
            android:textColor="#fff"
            android:layout_marginRight="5dp"
            android:text="密        码:"/>
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:textColor="#fff"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:drawableBottom="@drawable/line"
            android:inputType="textPassword"
            android:layout_marginRight="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/r_confirm_password"
        android:layout_below="@id/r_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:textColor="#fff"
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:text="确认密码:"/>
        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:textColor="#fff"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:drawableBottom="@drawable/line"
            android:inputType="textPassword"
            android:layout_marginRight="30dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/r_email"
        android:layout_below="@+id/r_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="right"
            android:textColor="#fff"
            android:layout_marginRight="5dp"
            android:text="电子邮箱:"/>
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_weight="0.3"
            android:textColor="#fff"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:drawableBottom="@drawable/line"
            android:layout_marginRight="30dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/r_register"
        android:layout_below="@+id/r_email"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button_selector"
        android:textColor="#ffffff"
        android:text="立即注册"/>
    </LinearLayout>


</RelativeLayout>
